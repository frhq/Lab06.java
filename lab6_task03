import java.util.Scanner;  

public class Act3 {  
      public static void main(String[] args) {  
         Scanner input = new Scanner(System.in);  
     
            int num1 , num2; 
            int count = 0; 
  
            System.out.print("Enter the sequence of numbers: "); 
            num1 = input.nextInt(); 
  
            while(true){ 
              num2 = input.nextInt(); 
            if (num2==0){ 
              break; 
               } 
   
            if (num1>num2){ 
                 count++;} 
              num1 = num2; 
              } 
             System.out.print(count); 
  } 
} 
